pipeline {
	agent {
		docker {
			image 'alpine:latest'
		}
	}
	triggers {
		pollSCM '* * * * *'
	}
	stages {
		stage('build') {
			steps {
				sh 'cat /etc/alpine-release'
			}
			stage('date') {
				steps {
					def now = new Date()
        				println now.format("yyMMdd.HHmm", TimeZone.getTimeZone('UTC'))
				}
			}
		}
	}
}
