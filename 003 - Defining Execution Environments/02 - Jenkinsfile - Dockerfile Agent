pipeline {
    agent { 
    	dockerfile{
    		filename '02 - Dockerfile - Dockerfile Agentd'
		dir '003 - Defining Execution Environments'
		label 'my-defined-label'
		additionalBuildArgs '--build-arg version=1.0.2'
		args '-v /tmp:/tmp'
   	 }
    }
    stages {
        stage('build') {
            steps {
                sh 'if [ "$ENV_VARIABLE" != "Value for execution" ]; then exit 1; fi'
            }
        }
    }
}
