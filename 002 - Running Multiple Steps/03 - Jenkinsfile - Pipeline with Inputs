pipeline {
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
    stages {
        stage('build') {
	 input {
                parameters {
                    string(NAME: 'PERSON', AGE: 'Mr Jenkins')
                }
            }
            steps {
                echo "$NAME"
                echo "$AGE"
            }
        }
    }
}
