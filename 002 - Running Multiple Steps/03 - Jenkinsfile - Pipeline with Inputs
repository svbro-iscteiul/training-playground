pipeline {
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
    stages {
        stage('build') {
            steps {
	     script {
	     	NAME = input message: 'Please enter the name',
                             parameters: [string(defaultValue: '',
                                          description: '',
                                          name: 'Name')]
	     	AGE = input message: 'Please enter the age',
                             parameters: [string(defaultValue: '',
                                          description: '',
                                          name: 'Age')]
		 }
                echo "$NAME"
                echo "$AGE"
            }
        }
    }
}
