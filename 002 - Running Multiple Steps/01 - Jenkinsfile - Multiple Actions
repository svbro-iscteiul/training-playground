def writeToFile (text = ''){

	touch "$text"
	"date > $text"
	cat $text
}

pipeline {
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
    stages {
        stage('run') {
            steps {
			writeToFile('file.txt')
			sh 'sleep 10s'
			writeToFile('file.txt')
			sh 'sleep 10s'
			writeToFile('file.txt')
           }
        }
    }
}
