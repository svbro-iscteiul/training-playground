pipeline {
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
    stages {
        stage('run') {
            steps {
	        def count = 1
	    	while(count <= 3) {
                	sh 'date > result.txt'
			sh 'sleep 10s'
			sh 'date >> result.txt'
			sh 'cat result.txt'
			count ++
           }
        }
    }
}
